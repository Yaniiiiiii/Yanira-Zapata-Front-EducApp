{
    "name": "Yanira-Zapata_Front-Final-Project-202210-MAD",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test --coverage",
        "test:all": "react-scripts test --watchAll --collect--coverage",
        "test:prod": "react-scripts test --watchAll --collect--coverage --watchAll=false --passWithNoTests",
        "eject": "react-scripts eject",
        "lint": "eslint ."
    },
    "dependencies": {
        "@auth0/auth0-react": "^1.12.0",
        "@reduxjs/toolkit": "^1.9.0",
        "@testing-library/jest-dom": "^5.16.5",
        "@testing-library/react": "^13.4.0",
        "@testing-library/user-event": "^13.5.0",
        "@types/jest": "^27.5.2",
        "@types/node": "^16.18.0",
        "@types/react": "^18.0.23",
        "@types/react-dom": "^18.0.7",
        "@types/react-redux": "^7.1.24",
        "@typescript-eslint/eslint-plugin": "^5.41.0",
        "@typescript-eslint/parser": "^5.41.0",
        "eslint-config-prettier": "^8.5.0",
        "firebase": "^9.15.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-redux": "^8.0.5",
        "react-router-dom": "^6.4.2",
        "react-scripts": "5.0.1",
        "typescript": "^4.8.4",
        "web-vitals": "^2.1.4"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "plugin:@typescript-eslint/recommended",
            "prettier"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": "latest",
            "sourceType": "module"
        },
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "testing-library/no-render-in-setup": "off"
        }
    },
    "prettier": {
        "singleQuote": true
    },
    "jest": {
        "coveragePathIgnorePatterns": [
            "<rootDir>/src/reportWebVitals.ts",
            "<rootDir>/src/index.ts",
            "<rootDir>/src/tools/debug.ts",
            "<rootDir>/src/features/components/searchBar/searchBar.tsx"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
